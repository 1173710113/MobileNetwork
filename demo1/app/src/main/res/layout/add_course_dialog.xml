<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/bg_add_reply_dialog">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加课程"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="2dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="课程名称"
        android:id="@+id/add_course_dialog_name"
        android:background="@color/backgroundGrey"
        android:padding="5dp"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="授课地点"
            android:background="@color/backgroundGrey"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/add_course_dialog_destination"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="最大人数"
            android:background="@color/backgroundGrey"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/add_course_dialog_max"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择开始日期"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@color/backgroundGrey"
        android:id="@+id/add_course_dialog_start"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择截止日期"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@color/backgroundGrey"
        android:id="@+id/add_course_dialog_end"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/add_course_dialog_cancel"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发布"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/add_course_dialog_confirm"/>
    </LinearLayout>
</LinearLayout>