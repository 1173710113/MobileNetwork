<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="如何理解1+1=2？"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"
        android:id="@+id/discussion_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.20"
            android:id="@+id/discussion_post_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1173710113"
            android:layout_marginLeft="20pt"
            android:textColor="@color/skyBlue"
            android:id="@+id/discussion_poster_id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2pt"
            android:textColor="@color/skyBlue"
            android:text="滕文杰"
            android:id="@+id/discussion_poster_name"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="56"
                android:layout_marginRight="2pt"
                android:id="@+id/discussion_reply_count"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="评论"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>