<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:elevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:stateListAnimator="@drawable/lift_on_touch">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/girl"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计算机网络"
                        android:textSize="20sp"
                        android:id="@+id/teacher_course_recycler_item_name"
                        android:textColor="@color/primary_text"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="14524"
                            android:gravity="right"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:id="@+id/teacher_course_recycler_item_code"
                            android:textColor="@color/accent"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王中介"
                    android:id="@+id/teacher_course_recycler_item_teacher_name"
                    android:textColor="@color/secondary_text"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="授课地点:"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="征信楼"
                        android:id="@+id/teacher_course_recycler_item_destination"
                        android:textSize="20sp"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20pt">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已选人数:"
                        android:textColor="@color/secondary_text"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:id="@+id/teacher_course_recycler_item_real_vol"
                        android:textSize="20sp"
                        android:textColor="@color/primary_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"
                        android:textSize="20sp"
                        android:textColor="@color/primary_text"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开课时间:"
                    android:textColor="@color/secondary_text"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-20-14 15:00:00"
                    android:id="@+id/teacher_course_recycler_item_start_date"
                    android:textSize="20sp"
                    android:textColor="@color/primary_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结课时间:"
                    android:textColor="@color/secondary_text"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-20-14 15:00:00"
                    android:id="@+id/teacher_course_recycler_item_end_date"
                    android:textSize="20sp"
                    android:textColor="@color/primary_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:src="@drawable/ic_assessment_black_18dp"/>
                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:src="@drawable/ic_assignment_black_18dp"
                        android:id="@+id/teacher_course_recycler_item_test"/>
                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:src="@drawable/ic_description_black_18dp"
                        android:id="@+id/teacher_course_recycler_item_homework"/>
                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:src="@drawable/ic_question_answer_black_18dp"
                        android:id="@+id/teacher_course_recycler_item_discussion"/>
                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:src="@drawable/ic_folder_open_black_18dp"
                        android:id="@+id/teacher_course_recycler_item_file"/>
                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:src="@drawable/ic_delete_forever_black_18dp"
                        android:id="@+id/teacher_course_recycler_item_delete"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>